<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/genalbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/toolBarbg" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_go_back"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/back_02" />

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="相册"
                    android:textColor="@color/White"
                    android:textSize="@dimen/size16"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/bt_takepic"
                    android:layout_width="45dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_add_video"
                    android:background="@drawable/action_btn"
                    android:text="拍照"
                    android:textColor="@color/White"
                    android:textSize="@dimen/size14"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/bt_add_video"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_toLeftOf="@+id/bt_add_photo"
                    android:background="@drawable/action_btn"
                    android:text="添加短视频"
                    android:textColor="@color/White"
                    android:textSize="@dimen/size14"/>

                <Button
                    android:id="@+id/bt_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/action_btn"
                    android:text="添加图片"
                    android:textColor="@color/White"
                    android:textSize="@dimen/size14"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/album_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/white"/>

    </RelativeLayout>

</LinearLayout>