<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <!--点击背景-->  
    <item android:drawable="@drawable/photouse" android:state_pressed="true">  
        <shape>  
             <!--色值-->  
            <solid android:color="#ba4244" />  
            <!--圆角-->  
            <corners android:radius="5dp" />  
        </shape>  
    </item>  
    <!--默认背景-->  
    <item android:drawable="@drawable/photonormal">  
        <shape>  
            <solid android:color="#ba6c6c" />  
            <corners android:radius="5dp" />  
        </shape>  
    </item>  
</selector> 